{
  "name": "prettyweather",
  "version": "0.0.1",
  "description": "A TypeScript and Canvas web app for interactively displaying the weather for a given city",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && node dist/server",
    "build": "mkdir -p dist && rm -rf dist/* && npm run build-server && rollup -c && npm run copy-static-files",
    "build-server": "tsc -p tsconfig.server.json",
    "copy-static-files": "cp -r src/images dist/client && cp src/index.{html,css} dist/client",
    "test": "tslint && jest"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/jamesseanwright/prettyweather.git"
  },
  "keywords": [
    "weather",
    "openweathermap",
    "search",
    "canvas",
    "typescript",
    "inheritance",
    "composition"
  ],
  "author": "James Wright <james@jamesswright.co.uk>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jamesseanwright/pretty-weather/issues"
  },
  "homepage": "https://github.com/jamesseanwright/pretty-weather#readme",
  "devDependencies": {
    "@types/express": "4.11.1",
    "@types/jest": "22.2.3",
    "@types/request": "2.47.0",
    "express": "4.16.3",
    "jest": "23.1.0",
    "request": "2.87.0",
    "rollup": "0.59.4",
    "rollup-plugin-typescript2": "0.14.0",
    "rollup-plugin-uglify": "4.0.0",
    "tslint": "5.10.0",
    "typescript": "2.9.1",
    "uglify-es": "3.3.9"
  }
}
